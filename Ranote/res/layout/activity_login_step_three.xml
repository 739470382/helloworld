<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        layout="@layout/view_setting_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/user_page3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="32dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/user_page3_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:ems="8"
                    android:lineSpacingExtra="3dp"
                    android:lines="2"
                    android:text="@string/lbl_user3_text"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/user_page3_text_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_page3_text"
                    android:layout_marginBottom="48dp"
                    android:ems="8"
                    android:text="@string/lbl_user1_mail"
                    android:textColor="@color/cue_title"
                    android:textStyle="bold" >
                </TextView>

                <EditText
                    android:id="@+id/user_page3_txtMail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/user_page3_text_mail"
                    android:background="@null"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.@_+-–/"
                    android:ems="8"
                    android:hint="@string/hint_mail"
                    android:lines="1"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/edittext_cursor" >
                </EditText>
            </RelativeLayout>

            <View
                android:id="@+id/login3_set_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cut_line" />

            <RelativeLayout
                android:id="@+id/user_page3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="28dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/user_page3_text_psw1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.@_！#￥%*：？、"
                    android:ems="8"
                    android:text="@string/lbl_user3_psw1"
                    android:textColor="@color/cue_title"
                    android:textStyle="bold" >
                </TextView>

                <EditText
                    android:id="@+id/user_page3_txt_psw1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/user_page3_text_psw1"
                    android:background="@null"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.@_！#￥%*：？、"
                    android:ems="8"
                    android:hint="@string/hint_code"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/edittext_cursor" >
                </EditText>
            </RelativeLayout>

            <View
                android:id="@+id/login3_set_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cut_line" />

            <RelativeLayout
                android:id="@+id/user_page3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="28dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/user_page3_text_psw2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:ems="8"
                    android:text="@string/lbl_user3_psw2"
                    android:textColor="@color/cue_title"
                    android:textStyle="bold" >
                </TextView>

                <EditText
                    android:id="@+id/user_page3_txt_psw2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/user_page3_text_psw2"
                    android:background="@null"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.@_！#￥%*：？、"
                    android:ems="8"
                    android:hint="@string/hint_code"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/edittext_cursor" >
                </EditText>
            </RelativeLayout>

            <View
                android:id="@+id/login3_set_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cut_line" />
        </LinearLayout>
    </ScrollView>

    <!-- android:background="@color/cut_line" -->
      
</LinearLayout>