<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_setting_bar" />

    <ScrollView
        android:id="@+id/setting_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linlearlayout_setting_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="28dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/setting_login_top_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp" />

                <RelativeLayout
                    android:id="@+id/user_setting_button1"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="46dp"
                    android:background="@drawable/blue_button_rounnd" >

                    <TextView
                        android:id="@+id/setting_login_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/set_backup"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/setting_restore_top_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:lineSpacingExtra="4dp" />
                <RelativeLayout
                    android:id="@+id/update_time_layout"
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content"
                   
                    android:layout_marginTop="14dp">
                <TextView 
                    android:id="@+id/data_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_centerHorizontal="true"
                    />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_setting_button2"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/blue_button_rounnd" >

                    <TextView
                        android:id="@+id/setting_restore_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/main_color"
                        android:text="@string/set_reload"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            <!--
      <ScrollView 
        android:id="@+id/setting_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" 
        
        >
            -->

            <LinearLayout
                android:id="@+id/setting_relative_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <View
                    android:id="@+id/set_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cut_line" />

                <RelativeLayout
                    android:id="@+id/set_footer_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white" >

                    <TextView
                        android:id="@+id/set_txtMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/lbl_set_mode" />

                    <TextView
                        android:id="@+id/set_txtMode_setumei"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/set_txtMode"
                        android:layout_marginLeft="30dp"
                        android:lines="2"
                        android:text="@string/lbl_set_mode_setumei" />

                    <ToggleButton
                        android:id="@+id/set_mode_toggle"
                        android:layout_width="76dp"
                        android:layout_height="52dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/coustom_togglebutton"
                        android:button="@color/transparent"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                     
                </RelativeLayout>

                <View
                    android:id="@+id/set_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cut_line" />

                <RelativeLayout
                    android:id="@+id/set_footer_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="52dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/white" >

                    <TextView
                        android:id="@+id/set_txtRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/setcomm_lbl_rule" />

                    <ImageView
                        android:id="@+id/set_imgRight1"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/icon_allow_all" />
                </RelativeLayout>

                <View
                    android:id="@+id/set_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cut_line" />

                <RelativeLayout
                    android:id="@+id/set_footer_line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="44dp"
                    android:layout_marginTop="48dp"
                    android:background="@color/white" >

                    <TextView
                        android:id="@+id/set_txtPri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/setcomm_lbl_privacy" />

                    <ImageView
                        android:id="@+id/set_imgRight2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/icon_allow_all" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cut_line" />

                <View
                    android:id="@+id/set_line4"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>