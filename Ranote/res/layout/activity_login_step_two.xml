<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/login_step2_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        layout="@layout/view_setting_title_bar" />

    <RelativeLayout
        android:id="@+id/user_page2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_step2_top"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="32dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/user_page2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="8"
            android:lineSpacingExtra="3dp"
            android:text="@string/lbl_user2_text"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/page2_text_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_page2_text"
            android:layout_marginBottom="60dp"
            android:ems="8"
            android:text="@string/lbl_user2_code"
            android:textColor="@color/cue_title"
            android:textStyle="bold" >
        </TextView>

        <EditText
            android:id="@+id/user_page2_txtCode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/page2_text_code"
            android:background="@null"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="8"
            android:lines="1"
            android:singleLine="true"
            android:hint="@string/hint_code" >
        </EditText>
    </RelativeLayout>

    <View
        android:id="@+id/login2_set_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/user_page2"
        android:background="@color/cut_line" />

    <RelativeLayout
        android:id="@+id/user_page2_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <View
            android:id="@+id/login2_set_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cut_line" />

        <RelativeLayout
            android:id="@+id/user_step2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login2_set_line1"
            android:background="@color/white"
            android:paddingBottom="28dp"
            android:paddingTop="24dp" >

            <TextView
                android:id="@+id/setting_login2_buttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:text="@string/login_step2_buttom_button_text"
                android:textColor="@color/main_color" />
        </RelativeLayout>

        <View
            android:id="@+id/login2_set_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/user_step2_button"
            android:background="@color/cut_line" />

        <TextView
            android:id="@+id/setting_login2_buttom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login2_set_line3"
            android:lineSpacingExtra="3dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:text="@string/login_step2_buttom_button_text1"
            android:textColor="@color/cut_line" />
        <View
            android:id="@+id/login2_set_line2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@id/setting_login2_buttom_text"
            android:background="@color/white" />
    </RelativeLayout>

    <!-- android:background="@color/cut_line" -->

</RelativeLayout>