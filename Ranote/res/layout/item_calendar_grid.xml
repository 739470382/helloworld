<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/view_calendar_background">
    

    <RelativeLayout
        android:id="@+id/relative_calendar_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relative_see_to_docter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:textColor="@color/item_txt_un_select" />
            
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_normal_schedule"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_below="@id/relative_see_to_docter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="9dp"
            android:gravity="top|center_horizontal"
            android:background="@drawable/border"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_normal_schedule"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >
            
             <ImageView
                android:id="@+id/txt_antibiotic_mark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@android:color/transparent"
                android:src="@drawable/red"/>
             

            <ImageView
                android:id="@+id/txt_bological_agent_mark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:src="@drawable/blue"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/txt_other_medicine_mark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@android:color/transparent"
                android:src="@drawable/green" />
        </LinearLayout>
    </RelativeLayout>
    <View 
        android:id="@+id/horizotal_line_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relative_calendar_item"
        android:background="@color/week_bottom_line"/>

</RelativeLayout>