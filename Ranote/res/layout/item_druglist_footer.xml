<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
	<View 
	    android:id="@+id/view_druglist3_line"
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="#DCDCDC"/>
    <RelativeLayout
        android:id="@+id/drualist_add"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:id="@+id/textview_druglist_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="@string/druglist_add"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_allow_al" />
    </RelativeLayout>
	<View 
	    android:id="@+id/view_druglist_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#DCDCDC"/>
	<View 
	    android:id="@+id/view_druglist_space"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"/>
</LinearLayout>